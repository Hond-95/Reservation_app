<%= stylesheet_link_tag 'users' %>

<div class="container device">
  <div class="device_frame">
    <p class="">新しいアカウントを作成</p>
    <div class="device_inner">
      <%= form_with(url: "/signup", method: :get, local: true) do |f| %>
        <% if @user %>
          <% @user.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
        <% end %>
        <div class="field authenticate-row">
          <%= f.text_field :name ,:placeholder =>"ユーザー名"%>
        </div>
        <div class="field authenticate-row">
          <%= f.email_field :email ,:placeholder =>"メールアドレス "%>
        </div>
        <div class="field authenticate-row">
          <%= f.password_field :password ,:placeholder =>"パスワード"%>
        </div>
        <div class="field authenticate-row">
          <%= f.password_field :password_confirmation ,:placeholder =>"パスワード確認"%>
        </div>
        <div class="field authenticate-row">
          <%= f.submit "新しいアカウントを作成" %>
        </div>
      <% end %>
      <div class="field authenticate-row">
        <%= link_to "すでにアカウントをお持ちの方はこちら", "/users/sign_in" %>
      </div>
    </div>
  </div>
</div>