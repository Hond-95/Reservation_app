<%= stylesheet_link_tag 'rooms' %>

<div class="container-field room-new">
  <div class="row">
    <div class="col-lg-2 user-nav user-nav-pc d-lg-block d-none">
      <ul>
        <li class="active">
          <a href="/rooms/new">基本情報</a>
        </li>
      </ul>
    </div>
    <div class="col-lg-10 room-view">
      <%= form_with(model: @rooms ,url: "/rooms/create",multipart: true,local: true) do |f| %>
        <div class="room-view-box">
          <div class="update-content">
            <div class="row">
              <h5>ルーム登録情報</h5>
            </div>
            <% if @rooms %>
              <% @rooms.errors.full_messages.each do |message| %>
                <div class="form-error">
                  <%= message %>
                </div>
              <% end %>
            <% end %>
          </div>
          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a">ルーム名</label>
              <%= f.text_field :name ,:placeholder =>"ルーム名を入力",class: 'form-control mb-4 col-md-9'%>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a">ルーム紹介</label>
              <%= f.text_area :introduction ,:placeholder =>"ルーム紹介を入力",class: 'form-control mb-4 col-md-9'%>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a">料金</label>
              <%= f.number_field :fee ,:placeholder =>"一日あたりの料金を入力",class: 'form-control mb-4 col-md-9', min:1%>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a">住所</label>
              <%= f.text_field :address ,:placeholder =>"住所を入力",class: 'form-control mb-4 col-md-9'%>
            </div>
          </div>
          <div class="update-content">
            <div class="row">
              <label class="col-md-3 required-a">ルーム画像</label>
              <%= f.file_field :room_image ,class: 'mb-4 col-md-9'%>
            </div>
          </div>
        　<div class="update-content">
            <div class="row">
              <input type="submit" value="登録" class="col-md-2 btn btn-primary mx-3">
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>